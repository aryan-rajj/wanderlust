<% layout("./layouts/boilerplate.ejs") %>
    <body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1 class="mt-3">Add New Listing</h1>
                <form action="/listings/new" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mt-2"><label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                           type a title
                        </div>
                    </div>

                    <div class="mt-2"><label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" placeholder="describe it in detail" class="form-control "
                            rows="3" required></textarea>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            write a description
                        </div>
                    </div>
                    <div class="mt-2"><label for="image-link" class="form-label">upload Image</label>
                        <input type="file" name="listing[image]" placeholder="upload image" class="form-control" >
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            upload a image
                        </div>
                    </div>
                    <div class="mt-2">
                        <div class="row">
                            <div class="col-md-4"><label for="price" class="form-label">Price</label>
                                <input name="listing[price]" placeholder="1800" class="form-control" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    choose a price
                                </div>
                            </div>
                            <div class="col-md-8">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" name="listing[country]" placeholder="India" class="form-control"
                                    required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    country name
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-2"><label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Jaipur,Rajasthan" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            choose a location
                        </div>
                    </div>
                    <div class="mt-2"><button class="btn btn-dark btn-md active mt-2"
                            style="background-color: #fe424d; border: none;" type="submit" onclick="forwardGeocode()">ADD</button></div>
                </form>
            </div>
        </div>
        <script src=".../controllers/listing.js"></script>
    </body>